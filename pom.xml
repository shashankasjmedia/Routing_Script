<project xmlns="http://maven.apache.org/POM/4.0.0" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <groupId>com.payin</groupId>
  <artifactId>Routing</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>jar</packaging>  <!-- ✅ Make sure this is inside <project> -->

  <name>Routing</name>
  <url>http://maven.apache.org</url>

  <properties>
    <java.version>17</java.version>  <!-- ✅ Use correct Java version -->
    <spring-boot.version>3.1.2</spring-boot.version>  <!-- ✅ Spring Boot Version -->
  </properties>

  <dependencies>
    <!-- ✅ RestAssured for API Testing -->
    <dependency>
        <groupId>io.rest-assured</groupId>
        <artifactId>rest-assured</artifactId>
        <version>5.4.0</version>  <!-- Use latest version -->
        <scope>test</scope>
    </dependency>

    <!-- ✅ Gson for JSON Handling -->
    <dependency>
        <groupId>com.google.code.gson</groupId>
        <artifactId>gson</artifactId>
        <version>2.10.1</version> <!-- Use latest version -->
    </dependency>

    <!-- ✅ Spring Boot Starter Web (For API Development) -->
    <dependency>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-web</artifactId>
        <version>${spring-boot.version}</version>
    </dependency>

    <!-- ✅ Spring Boot Starter Core -->
    <dependency>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter</artifactId>
        <version>${spring-boot.version}</version>
    </dependency>

    <!-- ✅ Spring Boot Starter Test (For Unit Testing) -->
    <dependency>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-test</artifactId>
        <scope>test</scope>
        <version>${spring-boot.version}</version>
    </dependency>

    <!-- ✅ Added TestNG for Testing -->
    <dependency>
        <groupId>org.testng</groupId>
        <artifactId>testng</artifactId>
        <version>7.9.0</version>  <!-- Use latest version -->
    </dependency>

  </dependencies>

  <build>
    <plugins>
      <!-- ✅ Spring Boot Maven Plugin -->
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>

</project>
